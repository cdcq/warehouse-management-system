<Window x:Class="warehouse_management_system.StatisticDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warehouse_management_system"
        mc:Ignorable="d"
        Title="基本统计" Height="200" Width="400">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Margin="5">物品总数</TextBlock>
            <TextBlock x:Name="itemsCount" Grid.Column="1" Grid.Row="0" Margin="5"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Margin="5">总价值</TextBlock>
            <TextBlock x:Name="totalWorth" Grid.Column="1" Grid.Row="1" Margin="5"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Margin="5">数量最大值</TextBlock>
            <TextBlock x:Name="maxCount" Grid.Column="1" Grid.Row="2" Margin="5"/>
        </Grid>
    </Grid>
</Window>
